#!/bin/bash
# author: Lukas Kluft
# version: 08.01.2015
#
# purpose: automatically update the system

# update package list
echo -e "\t#### Update package list ####\n"
sudo apt-get update

# install new packages
echo -e "\n\n\t#### Install new packages ####\n"
sudo apt-get -y dist-upgrade

# clean up
echo -e "\n\n\t#### Remove old downloaded archive files ####\n"
sudo apt-get autoclean

echo -e "\n\n\t#### Remove unused packages ####\n"
sudo apt-get -y autoremove

# if existing, remove unused configuration files
if [[ $(dpkg --list | grep ^rc | cut -d " " -f 3) ]];then
    echo -e "\n\n\t#### Remove unused configuration files ####\n"
    sudo dpkg --purge $(dpkg --list | grep ^rc | cut -d " " -f 3)
fi

exit 0
